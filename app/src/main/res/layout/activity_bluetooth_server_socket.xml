<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BluetoothServerSocketActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_server_socket"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:text="@string/app_name"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_server_socket"
        android:layout_marginTop="20dp"
        android:id="@+id/et_server_socket"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/et_server_socket"
        app:layout_constraintTop_toBottomOf="@id/tv_server_socket"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="发送信息"
        android:id="@+id/btn_server_send_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>